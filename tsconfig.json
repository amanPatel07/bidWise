{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "dom",
      "esnext"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}